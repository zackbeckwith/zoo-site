<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<form action="/profiles/createZoo" method="POST">
  <input type="text" name="name">Zoo Name</input>
  <button>Create Zoo</button>
</form>

<ul>
  <% user.profile.zoos.forEach(zoo => { %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><a href="/zoos/<%= zoo._id %>"><%= zoo.name %></h5></a>
      </div>
      <form method="POST" action=""><button type="submit" class="btn btn-primary">Delete Zoo</button>
      </form>
    </div>
    <% }) %> 
</ul>
<%- include('../partials/footer') %>
